<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/modifycar"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_view_car_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/exobold"
        android:gravity="center"
        android:text="Car Information"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/carpicturemodify"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/text_view_car_info"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:drawablePadding="20dp"
        android:fontFamily="@font/exoregular"
        android:text="CarPicture"
        android:background="#43131BAF"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/modify_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/carpicturemodify"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:background="#43131BAF"
        android:drawableLeft="@drawable/carrent"
        android:drawablePadding="20dp"
        android:fontFamily="@font/exoregular"
        android:hint="Car Color"
        android:inputType="text"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />


    <EditText
        android:id="@+id/modify_priceperday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/modify_color"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:background="#43131BAF"
        android:drawableLeft="@drawable/carrent"
        android:drawablePadding="20dp"
        android:fontFamily="@font/exoregular"
        android:hint="Price Per Day"
        android:inputType="numberDecimal"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />


    <Button
        android:id="@+id/button_submit_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/modify_priceperday"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_corner"
        android:text="Submit modified car" />


</RelativeLayout>
