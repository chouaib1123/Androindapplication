<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/joj"
    android:alpha="0.9"
    tools:context=".login">

    <ImageView
        android:id="@+id/appname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/carlogo"

        />

    <TextView
        android:id="@+id/question"
        android:layout_below="@id/appname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="Client or Agency?"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:fontFamily="@font/exoregular"
        />

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/client"
        android:layout_below="@id/question"
        android:layout_centerHorizontal="true"
        android:text="Client"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="40dp"
        android:background="@drawable/rounded_corner"
        android:width="150dp"
        android:fontFamily="@font/exobold"
        />
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/agency"
        android:layout_below="@id/client"
        android:layout_centerHorizontal="true"
        android:text="Agency"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="40dp"
        android:background="@drawable/rounded_corner"
        android:width="150dp"
        android:fontFamily="@font/exobold"
        />

    <TextView
        android:id="@+id/backtologin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/agency"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/exoregular"
        android:gravity="center"
        android:text="Go back to login "
        android:textColor="#90ffffff"
        android:textSize="15dp"
        android:textStyle="bold" />
</RelativeLayout>