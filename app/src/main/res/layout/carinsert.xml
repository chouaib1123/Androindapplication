<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_view_car_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="50dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/exobold"
        android:gravity="center"
        android:text="Car Details"
        android:textColor="#CB3A40B3"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/carpicture"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/text_view_car_info"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:drawablePadding="20dp"
        android:fontFamily="@font/exoregular"
        android:text="CarPicture 400 * 400"
        android:background="#43131BAF"
        android:gravity="center"

        android:padding="20dp"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/edit_text_car_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/carpicture"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:background="#43131BAF"
        android:drawableLeft="@drawable/carrent"
        android:drawablePadding="20dp"
        android:fontFamily="@font/exoregular"
        android:hint="Car Color"
        android:inputType="text"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/edit_text_fuel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_text_car_color"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:background="#43131BAF"
        android:drawableLeft="@drawable/carrent"
        android:drawablePadding="20dp"
        android:fontFamily="@font/exoregular"
        android:hint="Fuel type"
        android:inputType="text"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"

        android:id="@+id/checkbox_automatic_container"
        android:layout_below="@id/edit_text_fuel"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"

        android:paddingLeft="15dp"

        android:background="#43131BAF"
        android:layout_height="wrap_content">

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/checkbox_automatic"

            android:paddingLeft="10dp"
            android:layout_gravity="center"
            android:text="Automatic Transmission"
            android:textColor="@color/white"/>
    </LinearLayout>


    <EditText
        android:id="@+id/edit_text_car_matricule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkbox_automatic_container"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:background="#43131BAF"
        android:drawableLeft="@drawable/carrent"

        android:drawablePadding="20dp"
        android:fontFamily="@font/exoregular"
        android:hint="Car Matricule"
        android:inputType="text"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/edit_text_car_model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_text_car_matricule"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:background="#43131BAF"
        android:drawableLeft="@drawable/carrent"
        android:drawablePadding="20dp"
        android:fontFamily="@font/exoregular"
        android:hint="Car Model"
        android:inputType="text"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/edit_text_car_price_per_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_text_car_model"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:background="#43131BAF"
        android:drawableLeft="@drawable/carrent"
        android:drawablePadding="20dp"
        android:fontFamily="@font/exoregular"
        android:hint="Price Per Day"
        android:inputType="numberDecimal"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/edit_text_car_seats_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_text_car_price_per_day"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:background="#43131BAF"
        android:drawableLeft="@drawable/carrent"
        android:drawablePadding="20dp"
        android:fontFamily="@font/exoregular"
        android:hint="Seats Number"
        android:inputType="number"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <Button
        android:id="@+id/button_add_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_text_car_seats_number"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/rounded_corner"
        android:text="Add Car" />


</RelativeLayout>
