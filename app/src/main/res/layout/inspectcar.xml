<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/inspectcar"
    android:layout_margin="20dp"
    android:layout_gravity="center"
    android:padding="20dp"
    android:background="@drawable/shadow"
    android:elevation="20dp"

    >

    <ImageView
        android:id="@+id/carpictureinspect"
        android:layout_width="wrap_content"
        android:layout_height="600px"
        android:elevation="20dp"

        android:layout_margin="20dp"
        />

    <TextView
        android:id="@+id/carModelInspect"
        android:layout_width="286dp"
        android:layout_height="31dp"
        android:layout_margin="20dp"
        android:background="#120B0808"
        android:elevation="20dp"
        android:fontFamily="@font/signikanegative"
        android:text="Mercedes"
        android:textAlignment="center"
        android:textSize="25dp" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"

        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewFuelTypeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/signikanegative"
            android:text="FuelType :"
            android:layout_marginEnd="20dp"
            android:textSize="20dp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"

        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewisautomaticLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/signikanegative"
            android:text="IsAutomatic :"
            android:layout_marginEnd="20dp"
            android:textSize="20dp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"

        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewsitsnumberLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/signikanegative"
            android:text="Sits Number :"
            android:layout_marginEnd="20dp"
            android:textSize="20dp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"

        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewCityLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/signikanegative"
            android:text="City:"
            android:layout_marginEnd="20dp"
            android:textSize="20dp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"

        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewPriceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/signikanegative"
            android:text="Price per day:"
            android:layout_marginEnd="20dp"
            android:textSize="20dp" />

    </RelativeLayout>

    <Button
        android:id="@+id/rentCarButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rent the car"
        android:background="@drawable/rounded_corner"
        android:fontFamily="@font/ffbold"
        android:textSize="18dp"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        />
</LinearLayout>